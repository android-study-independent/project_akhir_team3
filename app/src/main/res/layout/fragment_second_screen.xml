<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SecondScreen">

    <ImageView
        android:id="@+id/imgscreen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/screen2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <View
            android:id="@+id/viewscreen2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:background="@drawable/style_onboarding2"
            android:backgroundTint="#F6F6F6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="0dp"></View>

        <TextView
            android:id="@+id/texttitlesc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="Selamat Datang Di Chili Care"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/viewtv"
            app:layout_constraintRight_toRightOf="@+id/viewtv"
            app:layout_constraintStart_toStartOf="@+id/viewtv"
            app:layout_constraintTop_toTopOf="@+id/viewtv"
            app:layout_constraintVertical_bias="0.197"></TextView>

        <TextView
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chilli Care media untuk kita semua belajar \n menanam cabai dari pemula sampai dengan menghasilkan Cabai yang berkualitas."
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@+id/viewtv"
            app:layout_constraintTop_toBottomOf="@+id/texttitlesc2"
            android:layout_marginTop="40dp">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>